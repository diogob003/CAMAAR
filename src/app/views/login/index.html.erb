  <%= stylesheet_link_tag "login.index" %>

  <div class="container-wrapper">
    <div class="container">
      <div class="login-section">
        <h2>LOGIN</h2>
        <%= form_with url: login_path, method: :post, local: true do |f| %>
          <div class="form-group">
            <%= f.label :email_enrollment, "Email ou matrÃ­cula" %>
            <%= f.text_field :email_enrollment, placeholder: "aluno@aluno.unb.br", autocomplete: "username" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "Senha" %>
            <%= f.password_field :password, placeholder: "Password" %>
          </div>

          <% if flash[:alert] %>
            <div class="alert alert-warning">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <%= f.submit "Entrar", class: "login-button" %>
        <% end %>
      </div>
      <div class="welcome-section">
        <h1>Bem vindo ao Camaar</h1>
      </div>
    </div>
  </div>