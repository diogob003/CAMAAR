<%= stylesheet_link_tag "authenticated.admin" %>

<div class="header">
  <div class="menu-icon fa fa-bars" onclick="toggleSidebar()"></div>
  <div class="header-title">Gerenciamento</div>
  <div class="user-icon-container">
    <div class="user-icon" onclick="toggleLogoutDropdown()">U</div>
    <div class="logout-dropdown" id="logoutDropdown">
    <%= button_to "Logout", logout_path, method: :delete, class: "logout-btn" %>
  </div>
  </div>
</div>

<div class="main-content">
  <div class="sidebar" id="mySidebar">
    <%= link_to "Avaliações", authenticated_home_path %>
    <% if current_user && current_user.role == "professor" %>
      <%= link_to "Gerenciamento", authenticated_admin_path, class: "active"%>
    <% end %>
  </div>
  <div class="content-area">
    <div class="management-card">

      <button id="importarDadosBtn" class="management-button green">
        Importar dados
      </button>

      <button id="editarTemplatesBtn"
              class="management-button <%= @classrooms.any? ? 'green' : 'light-green' %>"
              onclick="window.location='<%= url_for(admin_templates_list_path) %>'">
        Editar Templates
      </button>

      <button id="enviarFormulariosBtn"
              class="management-button <%= @templates.any? ? 'green' : 'light-green' %>">
        Enviar Formularios
      </button>

      <button id="resultadosBtn"
              class="management-button <%= @sent_forms.any? ? 'green' : 'light-green' %>">
        Resultados
      </button>

    </div>
  </div>
</div>

<%= javascript_include_tag "authenticated.admin" %>
