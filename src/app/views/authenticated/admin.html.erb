<%= stylesheet_link_tag "authenticated.admin" %>

<div class="header">
  <div class="menu-icon fa fa-bars" onclick="toggleSidebar()"></div>
  <div class="header-title">Gerenciamento</div>
  <div class="user-icon-container">
    <div class="user-icon" onclick="toggleLogoutDropdown()">U</div>
    <div class="logout-dropdown" id="logoutDropdown">
    <%= button_to "Logout", logout_path, method: :delete, class: "logout-btn" %>
  </div>
  </div>
</div>

<div class="main-content">
  <div class="sidebar" id="mySidebar">
    <a href="/authenticated/home">Avaliações</a>
    <% if current_user && current_user.role == "professor" %>
      <a href="#" class="active">Gerenciamento</a>
    <% end %>
  </div>
  <div class="content-area">
    <div class="management-card">
      <button id="importarDadosBtn" class="management-button green" onclick="handleButtonClick('importarDados')">Importar dados</button>
      <button id="editarTemplatesBtn" class="management-button light-green" onclick="handleButtonClick('editarTemplates')">Editar Templates</button>
      <button id="enviarFormulariosBtn" class="management-button light-green" onclick="handleButtonClick('enviarFormularios')">Enviar Formularios</button>
      <button id="resultadosBtn" class="management-button light-green" onclick="handleButtonClick('resultados')">Resultados</button>
    </div>
  </div>
</div>

<%= javascript_include_tag "authenticated.admin" %>
